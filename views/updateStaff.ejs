<% include template/headerHome%>
    <div class="container">
        <div class="jumbotron text-center mt-3">
            <h1 class="display-3">
                <%= title %>
            </h1>
        </div>

        <% data.forEach(function (mot){ %>
            <form action="/updateStaff/<%= mot._id %>" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="staffName">Name </label>
                    <input type="text" class="form-control" name="staffName" id="" aria-describedby="helpId" placeholder="" value="<%= mot.staffName %>">
                </div>
                <div class="form-group">
                    <label for="gender">Gender</label>
                    <input type="text" class="form-control" name="gender" id="" aria-describedby="helpId" placeholder="" value="<%= mot.gender %>">
                </div>
                <div class="form-group">
                    <label for="birthday">Birthday</label>
                    <input type="text" class="form-control" name="birthday" id="" aria-describedby="helpId" placeholder="" value="<%= mot.birthday %>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" class="form-control" name="image" id="" aria-describedby="helpId" placeholder="" value="<%= mot.image %>">
                </div>
                <div class="form-group">
                    <label for="salary">Salary</label>
                    <input type="text" class="form-control" name="salary" id="" aria-describedby="helpId" placeholder="" value="<%= mot.salary %>">
                </div>
                <div class="form-group">
                    <label for="departID">Depart ID</label>
                    <input type="text" class="form-control" name="departID" id="" aria-describedby="helpId" placeholder="" value="<%= mot.departID %>">
                </div>

                <button type="submit" class="btn btn-primary mb-2">Submit</button>

            </form>
            <% }) %>
    </div>
    <% include template/footer%>


        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
        </body>

        </html>