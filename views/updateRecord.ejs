<% include template/headerHome%>
    <div class="container">
        <div class="jumbotron text-center mt-3">
            <h1 class="display-3">
                <%= title %>
            </h1>
        </div>

        <% data.forEach(function (mot){ %>
            <form action="/updateRecord/<%= mot._id %>" method="post">

                <div class="form-group">
                    <label for="recordType">Type </label>
                    <input type="text" class="form-control" name="recordType" id="" aria-describedby="helpId" placeholder="" value="<%= mot.recordType %>">
                </div>
                <div class="form-group">
                    <label for="recordDate">Date</label>
                    <input type="text" class="form-control" name="recordDate" id="" aria-describedby="helpId" placeholder="" value="<%= mot.recordDate %>">
                </div>
                <div class="form-group">
                    <label for="staffID">Staff ID</label>
                    <input type="text" class="form-control" name="staffID" id="" aria-describedby="helpId" placeholder="" value="<%= mot.staffID %>">
                </div>

                <button type="submit" class="btn btn-primary mb-2">Submit</button>

            </form>
            <% }) %>
    </div>
    <% include template/footer%>


        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
        </body>

        </html>